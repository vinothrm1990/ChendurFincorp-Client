<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tab.Total">
    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/total_layout"
        android:layout_marginTop="60dp"
        android:id="@+id/total_rv"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/total_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginTop="10dp"
           android:weightSum="2"
           android:layout_marginBottom="10dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:paddingRight="5dp"
               android:gravity="right"
               android:text="Total Credits :"
               android:textSize="18sp"
               android:fontFamily="@font/cousine_bold"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/total_sum_tv"
               android:gravity="center"
               android:textSize="18sp"
               android:fontFamily="@font/cousine_regular"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView"
            android:visibility="gone"
            app:indicatorName="BallPulseIndicator"
            app:indicatorColor="@color/colorPrimaryDark"/>
    </LinearLayout>
</RelativeLayout>